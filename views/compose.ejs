<h1>Compose</h1>

<form action="/compose" method="post">
    <label for="title">Title</label>
    <input class="form-control top" type="text" name="titleBody" id="title">
    <br/>
    <label for="post">Post</label>
    <textarea class="form-control bottom" name="postBody" id="post" cols="30" rows="10"></textarea>
    <br/>
    <button class="w-100 btn btn-primary" type="submit">Publish</button>
</form>

